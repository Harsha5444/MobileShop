@model MobileShop.Web.Models.Product

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Product Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .product-container {
            display: flex;
            gap: 20px;
            align-items: flex-start;
            max-width: 900px;
            margin: 40px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .product-image {
            max-width: 300px;
            height: auto;
            border-radius: 10px;
        }

        .product-details {
            flex: 1;
        }

        .product-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .product-price {
            font-size: 1.5rem;
            color: #e67e22;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .btn-custom {
            margin-top: 15px;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container">
        <div class="product-container">
            <!-- Product Image -->
            <div>
                <img src="@Model.ImagePath" alt="Product Image" class="product-image img-fluid">
            </div>

            <!-- Product Details -->
            <div class="product-details">
                <div class="product-title">@Model.ProductName</div>
                <div class="product-price">$@Model.Price</div>

                <p><strong>Brand:</strong> @Model.Brand.BrandName</p>
                <p><strong>Category:</strong> @Model.Category.CategoryName</p>
                <p><strong>Stock available:</strong> @Model.Stock</p>
                <p><strong>Added At:</strong> @Model.CreatedAt</p>
                <p><strong>Active:</strong> @(Model.Active)</p>

                <!-- Action Buttons -->
                <div>
                    <a href="@Url.Action("Edit", "Product", new { id = Model.ProductID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Product", new { id = Model.ProductID })" class="btn btn-danger">Delete</a>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
