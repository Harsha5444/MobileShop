@model IEnumerable<MobileShop.Web.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List - Gadgetopia</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .product-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
        }

            .product-card img {
                max-width: 100%;
                height: auto;
                border-radius: 8px;
            }

            .product-card .product-name {
                font-size: 1.2rem;
                font-weight: bold;
                margin-top: 15px;
            }

            .product-card .product-price {
                font-size: 1.1rem;
                color: #007bff;
                margin-top: 10px;
            }

            .product-card .btn {
                background-color: #007bff;
                color: white;
                border-radius: 5px;
                margin-top: 15px;
            }
    </style>
</head>
<body>

    <div class="container my-4">
        <h1 class="mb-4">Our Products</h1>

        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="product-card">
                        <!-- Display the product image from ImageUrl property -->
                        <img src="@product.ImagePath" alt="@product.ProductName">
                        <div class="product-name">@product.ProductName</div>
                        <div class="product-price">$@product.Price</div>
                        <!-- Link to product details page using the product Id -->
                        <a href="/Products/ProductDetails/@product.ProductID" class="btn">View Details</a>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>
